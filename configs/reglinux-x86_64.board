include toolchain-gcc14-glibc.common
include reglinux-board.common

# Target definition
BR2_x86_64=y
BR2_PACKAGE_SYSTEM_TARGET_X86_64=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_REGLINUX_PATH)/board/patches $(BR2_EXTERNAL_REGLINUX_PATH)/board/x86_64/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_REGLINUX_PATH)/board/fsoverlay $(BR2_EXTERNAL_REGLINUX_PATH)/board/x86_64/fsoverlay"

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_LATEST_VERSION=y
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/linux_patches/linux_kernel_15khz/linux-6.12 $(BR2_EXTERNAL_REGLINUX_PATH)/board/x86_64/linux_patches"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_REGLINUX_PATH)/board/x86_64/linux_x86_64-defconfig.config"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/linux-defconfig-reglinux.config"
BR2_LINUX_KERNEL_NEEDS_HOST_LIBELF=y

# GPU
BR2_PACKAGE_SYSTEM_GPU_X86=y

# XWayland + experimental stuff (gamescope, vkbasalt)
BR2_PACKAGE_REGLINUX_SWAY=y
BR2_PACKAGE_REGLINUX_GAMESCOPE=y
BR2_PACKAGE_REGLINUX_XWAYLAND=y
BR2_PACKAGE_VKBASALT=y

# System
BR2_TARGET_ROOTFS_SQUASHFS4_XZ=y
BR2_TARGET_ROOTFS_SQUASHFS_BS_1024K=y
BR2_PACKAGE_BATOCERA_SYSLINUX_EFI=y
BR2_TARGET_SYSLINUX=y
BR2_TARGET_SYSLINUX_MBR=y
BR2_TARGET_SYSLINUX_C32="menu.c32 libutil.c32"
BR2_PACKAGE_EFIBOOTMGR=y
BR2_PACKAGE_BATOCERA_SHIM_SIGNED_EFI_X64=y
BR2_PACKAGE_BATOCERA_SHIM_SIGNED_EFI_IA32=y
BR2_PACKAGE_BATOCERA_SHIM_SIGNED_EFI_HELPERS_IA32=y
BR2_PACKAGE_BATOCERA_SHIM=y

# required for ia32 uefi mixed mode 64 bit kernel loading
BR2_TARGET_GRUB2=y
BR2_TARGET_GRUB2_I386_EFI=y
BR2_TARGET_GRUB2_BUILTIN_MODULES_EFI="boot linux ext2 fat squash4 part_msdos part_gpt normal efi_gop echo"

# Filesystem
BR2_TARGET_ROOTFS_CPIO_LZ4=y
